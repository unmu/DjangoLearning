def ajaxStu(request):
    return render(request, 'myApp/ajaxstu.html')

def stuInfo(request):
    stuList = Students.stuObj2.all()
    # 数据放至列表
    list2 = []
    for stu in stuList:
        list2.append([stu.sname, stu.sage])
    return JsonResponse({'data': list2})
